#!/bin/sh

### BEGIN INIT INFO
# Provides:          node-red
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start Node-RED at boot time
# Description:       Start Node-RED service.
### END INIT INFO

# USER=recamera  # Target user to switch to when running as root
USER=$(cat /etc/passwd | grep /bin/sh | grep -v root | awk -F':' '{print $1}')

DAEMON="/usr/bin/node-red-pi"
DAEMON_OPTS="--max-old-space-size=64 --expose-gc"
NAME=node-red
DESC="Node-RED service"

TMP_DIR="/tmp/$NAME"
PIDFILE="$TMP_DIR/pid"
[ ! -d "$TMP_DIR" ] && mkdir -p "$TMP_DIR" && chown -R $USER:$USER "$TMP_DIR"

start() {
    if [ -f $PIDFILE ]; then
        pid=$(cat $PIDFILE)

        if [ -d /proc/$pid ]; then
            if [[ "$(cat /proc/$pid/comm)" = "node-red" || "$(cat /proc/$pid/comm)" = "node" ]]; then
                echo "$DESC: $NAME($pid) is already running."
                exit 0
            fi
        fi

        pid="`pidof node-red`"
        if [[ "$pid" ]]; then
            echo "$pid" > $PIDFILE
            echo "$DESC: $NAME($pid) is already running."
            exit 0
        fi
        rm -f $PIDFILE
    fi

    local cmd="start-stop-daemon -S -q -m -b -p $PIDFILE --exec $DAEMON -- $DAEMON_OPTS"
    echo "Starting $DESC: $NAME"
    # Check if the current user is root
    if [ $(id -u) -eq 0 ]; then
        # If root and the specified user exists, switch to that user
        if id "$USER" &>/dev/null; then
            DAEMON_USER=$USER
            DAEMON_OPTS="$DAEMON_OPTS --userDir /home/$DAEMON_USER/.node-red"
            echo "Switching to user: $DAEMON_USER"
        else
            DAEMON_USER=root
            echo "User $USER does not exist. Running as root."
        fi
        su $DAEMON_USER -c "$cmd"
    else
        # If not root, use the current user to run the service
        DAEMON_USER=$(whoami)
        DAEMON_OPTS="$DAEMON_OPTS --userDir /home/$DAEMON_USER/.node-red"
        echo "Running as user: $DAEMON_USER"
        $cmd
    fi
    [ $? = 0 ] && echo "OK" || echo "FAIL"
}

stop() {
    echo "Stopping $DESC: $NAME"
    if [ -f $PIDFILE ]; then
        start-stop-daemon -K -q -p $PIDFILE
        rm -f $PIDFILE
    fi
    [ $? = 0 ] && echo "OK" || echo "FAIL"
}

restart() {
    stop
    start
}

status() {
    if [ -f $PIDFILE ]; then
        echo "$NAME is running."
    else
        echo "$NAME is not running."
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    status)
        status
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac

exit 0
